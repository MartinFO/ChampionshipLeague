<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    /** Team A label and score **/
    <TextView
        android:id="@+id/teamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/teamB"
         />

    <TextView
        android:id="@+id/scoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="301"
        android:textSize="80sp"
        app:layout_constraintTop_toBottomOf="@id/teamA"
        app:layout_constraintLeft_toLeftOf="@id/teamA"
        app:layout_constraintRight_toRightOf="@id/teamA"
        />

    /** Team B label and score **/
    <TextView
        android:id="@+id/teamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/teamA"
        app:layout_constraintRight_toRightOf="parent"
         />

    <TextView
        android:id="@+id/scoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="301"
        android:textSize="80sp"
        app:layout_constraintTop_toBottomOf="@id/teamB"
        app:layout_constraintLeft_toLeftOf="@id/teamB"
        app:layout_constraintRight_toRightOf="@id/teamB"
        />

    /** Current throw status line **/
    <TextView
        android:id="@+id/currentThrowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current Throw:"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/scoreA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/currentThrowMuliplierText"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <TextView
        android:id="@+id/currentThrowMuliplierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Double"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/currentThrowText"
        app:layout_constraintLeft_toRightOf="@id/currentThrowText"
        app:layout_constraintRight_toLeftOf="@id/currentThrowValue"
        />

    <TextView
        android:id="@+id/currentThrowValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/currentThrowMuliplierText"
        app:layout_constraintLeft_toRightOf="@id/currentThrowMuliplierText"
        app:layout_constraintRight_toRightOf="parent"
        />

        /** Numeric keypad grid **/
    <Button
        android:id="@+id/button_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/currentThrowText"
        />

    <Button
        android:id="@+id/button_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_1"
        app:layout_constraintTop_toTopOf="@id/button_1"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_2"
        app:layout_constraintTop_toTopOf="@id/button_2"/>

    <Button
        android:id="@+id/button_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        />

    <Button
        android:id="@+id/button_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_4"
        app:layout_constraintTop_toTopOf="@id/button_4"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_5"
        app:layout_constraintTop_toTopOf="@id/button_5"/>

    <Button
        android:id="@+id/button_7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        />

    <Button
        android:id="@+id/button_8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_7"
        app:layout_constraintTop_toTopOf="@id/button_7"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_8"
        app:layout_constraintTop_toTopOf="@id/button_8"/>

    <Button
        android:id="@+id/button_D"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="D"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        />

    <Button
        android:id="@+id/button_10"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="10"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_D"
        app:layout_constraintTop_toTopOf="@id/button_D"/>

    <Button
        android:id="@+id/button_T"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="T"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/button_10"
        app:layout_constraintTop_toTopOf="@id/button_10"/>

    /** Control buttons grid **/
    <Button
        android:id="@+id/button_post"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:text="Post"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/button_3"
        app:layout_constraintTop_toTopOf="@id/button_3"/>

    <Button
        android:id="@+id/button_toggle_a_b"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:text="A/B"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/button_post"
        app:layout_constraintTop_toBottomOf="@id/button_post"/>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:text="Reset"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/button_toggle_a_b"
        app:layout_constraintTop_toBottomOf="@id/button_toggle_a_b"/>

    /** Game Reset Button **/
    <Button
        android:id="@+id/button_game_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Reset"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>